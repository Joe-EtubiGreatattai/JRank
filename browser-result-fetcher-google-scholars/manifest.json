{
    "manifest_version": 2,
    "name": "Google Scholar Results Collector",
    "version": "1.0",
    "permissions": ["tabs", "activeTab", "storage"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://scholar.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  